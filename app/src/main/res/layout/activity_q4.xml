<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/styleQuestion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.ihrprof.quizapp.Q4Activity" >

    <TextView
        android:id="@+id/q4question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/q4_text"
        android:textAppearance="@style/styleQuestion" />

    <ImageView
        android:id="@+id/q4imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/q4question"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/screenshot" />

</RelativeLayout>
